<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.XuLyThanhToan"
    android:weightSum="10"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center"
            android:text="Chi tiết hóa đơn"
            android:textSize="20dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="9"
            android:id="@+id/rcl_xulyhoadon_khach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG TIỀN:"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            />
        <TextView
            android:id="@+id/tongtienthanhtoan_ad_khach"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số tiền phải thanh toán"
            android:textSize="17dp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/xuly_banso_khach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bàn số mấy"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/xuly_khuyenmai_khach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn hàng này không có mã khuyến mãi"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:id="@+id/trovechuathanhtoan_khach"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/xoadonhang_khach"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy đơn hàng"/>

    </LinearLayout>
</LinearLayout>